---
const {bg,bgAlt,type} = Astro.props;
---

<div class={type + " hero"}>
    <img src={bg} alt={bgAlt}/>
    <slot/>
</div>
<style>
    .hero {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    .hero img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: auto;
        z-index: -1;
    }
    .hero .content {
        position: relative;
        z-index: 1;
    }
    .hero .content .title {
        font-size: 3rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 0 10px rgba(0,0,0,.5);
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .hero .content .subtitle {
        font-size: 1.5rem;
        font-weight: 400;
        color: #fff;
        text-shadow: 0 0 10px rgba(0,0,0,.5);
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .hero .content .button {
        display: block;
        margin: 0 auto;
        padding: 1rem 2rem;
        background: #fff;
        color: #000;
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,.5);
    }
    .hero .content .button:hover {
        background: #000;
        color: #fff;
    }
    .hero .content .button:active {
        background: #000;
        color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,.5) inset;
    }
    .hero .content .button:focus {
        outline: none;
    }
    .hero .content .button:active:focus {
        outline: none;
    }
    .hero .content .button:active:hover {
        background: #000;
        color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,.5) inset;
    }
    .hero .content .button:active:active {
        background: #000;
    }
</style>