---
const {bg,bgAlt,type} = Astro.props;
---

<div class={type + " hero"}>
    <img class="bg bg1" src={bg} alt={bgAlt}/>
    <img class="bg bg2" src={bg} alt={bgAlt}/>
    <img class="bg bg3" src={bg} alt={bgAlt}/>
    <!-- <img class="bg bg4" src={bg} alt={bgAlt}/> -->
    <div class ="container">
        <div class="inner-container mc-grid">
            <slot/>
        </div>
    </div>
    
</div>
<style>
    
    .hero {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
        box-shadow: 0 0 10px 1px rgba(0,0,0,.5) inset;
        padding-top:192px;
        padding-bottom:128px;
    }
    .hero > img.bg {
        position: absolute;
        width: 300%;
        min-width:130%;
        height: auto;
        z-index: -1;
        top:50%;
        left: 50%;
        transform: translate(-50%,-50%);
        animation: wander 20s infinite ease-in-out;
    }
    .hero img.bg2,.hero img.bg3,.hero img.bg4 {
        mix-blend-mode:color-burn;
        animation-delay: 300ms;
        opacity:50%;
        filter: blur(1px) brightness(1.2) saturate(1.2) contrast(1.2) hue-rotate(250deg);
    }
    .hero img.bg3 {
        animation-delay: 500ms;
        opacity:40%;
    }
    .hero img.bg4 {
        animation-delay: 1300ms;
        opacity:50%;
    }
    @keyframes wander {
        0% {
            transform: translate(-50%,-50%) rotate(0deg);
        }
        25% {
            transform: translate(-52%,-49%) rotate(3deg);
        }
        50% {
            transform: translate(-51%,-47%) rotate(-2deg);
        }
        75% {
            transform: translate(-49%,-50%) rotate(-6deg);
        }
        100% {
            transform: translate(-50%,-50%) rotate(0deg);
        }
    }
    .hero .content {
        position: relative;
        z-index: 1;
    }
    .hero .content .title {
        font-size: 3rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 0 10px rgba(0,0,0,.5);
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .hero .content .subtitle {
        font-size: 1.5rem;
        font-weight: 400;
        color: #fff;
        text-shadow: 0 0 10px rgba(0,0,0,.5);
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .hero .content .button {
        display: block;
        margin: 0 auto;
        padding: 1rem 2rem;
        background: #fff;
        color: #000;
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,.5);
    }
    .hero .content .button:hover {
        background: #000;
        color: #fff;
    }
    .hero .content .button:active {
        background: #000;
        color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,.5) inset;
    }
    .hero .content .button:focus {
        outline: none;
    }
    .hero .content .button:active:focus {
        outline: none;
    }
    .hero .content .button:active:hover {
        background: #000;
        color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,.5) inset;
    }
    .hero .content .button:active:active {
        background: #000;
    }
</style>