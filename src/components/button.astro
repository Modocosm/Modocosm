---
const {link,text} = Astro.props
---

<div class = "button-container">
    <a href={link}>
        <span>{text}</span>
    </a>
</div>

<style>
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }
    .button-container a {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        text-decoration: none;
        color: white;
        border:1px solid #aa00ff90;
        box-shadow:0 0 3px black ;
        mix-blend-mode: unset;
        padding:8px;
        /* background-color:#8000ff50; */
        margin-right:16px;
        margin-top:16px;
        margin-bottom:32px;
        border-radius:5px;
        transition:300ms;
        background-clip: border-box;
        text-transform: uppercase;
        font-weight:700;
        font-size:1.3em;
    }
    .button-container a:hover {
        background-color:#8000ff20;
        border:1px solid #aa00ff;
        box-shadow:0 0 5px black ;
        filter: hue-rotate(-45deg);
        color:red;
    }
    .button-container a:hover span {
        color:#ff50ff;
        text-shadow:0 0 3px black ;
    }

    .button-container a span {
        color:white;
        text-shadow:none;
    }
</style>